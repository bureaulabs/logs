<%= turbo_frame_tag :media, class: "cover-container", style: "aspect-ratio: #{ @entry.cover.metadata["width"].to_f / @entry.cover.metadata["height"].to_f }" do %>
	<% if @entry.cover.representable? %>
		<%= link_to @entry.url, target: "_blank", class: "cover" do %>
			<% if @entry.cover.video? %>
				<%= video_tag url_for(@entry.cover), controls: false, autoplay: true, muted: true, loop: true, playsinline: true %>
			<% elsif @entry.cover.image? %>
				<%= image_tag url_for(@entry.cover) %>
			<% end %>
		<% end %>
	<% end %>
<% end %>