<%= form_with(model: @entry) do |form| %>
	<% if @entry.errors.any? %>
		<div style="color: red">
			<h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

			<ul>
				<% @entry.errors.each do |error| %>
					<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div>
		<%= form.label :cover, style: "display: block" %>
		<%= form.file_field :cover %>
	</div>

	<div>
		<%= form.label :url, style: "display: block" %>
		<%= form.text_field :url %>
	</div>
	
	<div>
		<%= form.label :category, style: "display: block" %>
		<%= form.collection_select(:category_id, Category.all, :id, :name, {:prompt => 'Pick a category'}, required: true) %>
	</div>

	<div>
		<%= form.label :title, style: "display: block" %>
		<%= form.text_field :title %>
	</div>

	<div>
		<%= form.label :caption, style: "display: block" %>
		<%= form.text_field :caption %>
	</div>

	<div>
		<%= form.submit %>
	</div>
<% end %>